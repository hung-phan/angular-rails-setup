define [
  "angular"
  "angular-ui-router"
], (angular) ->

  #config path for common page
  angular.module("commonModule", ["ui.router"]).config([
    "$stateProvider"
    ($stateProvider) ->
      $stateProvider.state "common",
        url: "/"
        templateUrl: "<%= asset_path("common/common.html") %>"
        controller: "CommonController"

  ]).controller "CommonController", [
    "$scope"
    "$location"
    ($scope, $location) ->

      # initialize
      $scope.pageTitle = "dummy"
  ]
